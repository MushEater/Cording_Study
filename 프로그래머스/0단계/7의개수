import java.util.*;
import java.util.stream.Stream;

public class 칠의개수 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] array = {7, 77, 17};
		int answer = 0;

		for(int x : array) {
			String str = String.valueOf(x);
			for(int i=0; i<str.length(); i++) {
				if(str.charAt(i)=='7') {answer++;}
			}
		}
		
	    System.out.println(answer);
	}
}
